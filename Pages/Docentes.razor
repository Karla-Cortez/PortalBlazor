@page "/docentes"
@using Models
@using Services
@inject IDocenteService DocentesService

<MudText Typo="Typo.h4">Docentes</MudText>
@code {
    IEnumerable<Docente> docentes = new List<Docente>();
    protected override async Task OnInitializedAsync()
    {
        docentes = await DocentesService.GetAll();
    }
}

@if (docentes == null)
{
    <p>Cargando...</p>
}
else


{
    <MudGrid>
        @foreach (var item in docentes)
        {
            <MudItem xs="12" sm="10" md="6" lg="4">
                <MudCard>
                    <MudCardHeader Class="gray lighten-3">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.Nombre</MudText>                            
                            <MudText Typo="Typo.h6">@item.Apellido</MudText>
                            <MudText Typo="Typo.h6">@item.CodigoDocente</MudText>
                            <MudText Typo="Typo.h6">@item.materia.Nombre</MudText>
                            <MudText Typo="Typo.h6">@item.ciclo.Nombre</MudText>
                            <MudText Typo="Typo.h6">@item.turno.Nombre</MudText>
                            <MudText Typo="Typo.h6">@item.Correo</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>

                    <MudCardActions>
                        <MudButton Link="@($"/horaxgrad/{item.Id}")" Variant="Variant.Outlined" Color="Color.Tertiary"
                                   Class="text-center">Ver Horario</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}
