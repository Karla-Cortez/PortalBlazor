@page "/horarios"
@using Models
@using Services
@inject IHorarioService HorarioService

<MudText Typo="Typo.h4">horarios</MudText>

@if (horarios == null)
{
    <p>Cargando...</p>
}
else
{
    <MudGrid>
        @foreach (var item in horarios)
        {
            <MudItem xs="12" sm="10" md="6" lg="4">
                <MudCard>
                    <MudCardHeader Class="blue lighten-1">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.Dia</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardHeader Class="blue lighten-1">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.HorarioInicio</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardHeader Class="blue lighten-1">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.HorarioSalida</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    
                    <MudCardActions>
                        <MudButton Link="@($"/munixgrad/{item.Id}")" Variant="Variant.Outlined" Color="Color.Success" 
                        Class="text-center">Detalles</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}


@code {
    IEnumerable<Horario> horarios = new List<Horario>();

    protected override async Task OnInitializedAsync()
    {
        horarios = await HorarioService.GetAll();
    }
}

